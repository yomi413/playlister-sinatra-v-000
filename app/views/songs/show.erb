<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song</h1>

  <%= @song.name %>

  <p> by <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>


<h1>Song's Genres</h1>

  <% Genre.all.each do |genre| %>
    <p><input type="text" name="genre_name" id="<%= genre.id %>" value="<%= genre.id %>"></p>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></input>
  <% end %>
